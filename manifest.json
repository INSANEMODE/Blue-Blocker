{
	"manifest_version": 3,
	"name": "Blue Blocker",
	"version": "0.2.1",
	"description": "Blocks all Twitter Blue verified users on twitter.com",
	"icons": {
		"128": "assets/icon-128.png"
	},
	"action": {
		"default_popup": "chrome/popup.html",
		"default_icon": "assets/icon.png"
	},
	"host_permissions": [
		"*://*.twitter.com/*",
		"*://twitter.com/*"
	],
	"permissions": [
		"scripting",
		"activeTab",
		"storage",
		"webRequest"
	],
	"background": {
		"service_worker": "chrome/main.js",
		"type": "module"
	}
}
